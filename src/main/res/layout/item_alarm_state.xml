<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/arg"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_alarm_arg"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="#fff"
            android:textSize="14sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="上厕所" />

    <TextView
        android:id="@+id/commons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="-" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="2019-01-01 00:00:00" />

    <TextView
        android:id="@+id/startName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="2019-01-01 00:00:00" />

    <TextView
        android:id="@+id/signTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="2019-01-01 00:00:00" />

    <TextView
        android:id="@+id/signName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="2019-01-01 00:00:00" />

    <TextView
        android:id="@+id/keepTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="14sp"
        tools:text="00:00:00" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp"
            style="@style/Button.AlarmSign"
            tools:text="签到" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_normal"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="14sp"
            style="@style/Button.AlarmNormal"
            tools:text="签到" />
    </LinearLayout>


</LinearLayout>